@model shoes_final_exam.Models.AuthenticationModels.ResetPasswordModel


<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Khôi phục mật khẩu</h1>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->
	<div class="row">
		<div class="col-md-4">

		</div>
	</div>
	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="~/Layout/img/login.jpg" alt="">
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Khôi phục mật khẩu</h3>
						<form asp-action="ResetPassword" class="row login_form" method="post" id="contactForm" novalidate="novalidate">
							<div asp-validation-summary="All" class="text-danger"></div>
							<div class="col-md-12 form-group">
								<input type="password" asp-for="Password" class="form-control" id="password" name="password" placeholder="Mật khẩu" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mật khẩu'" />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" name="ConfirmPassword" placeholder="Xác nhận mật khẩu" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Xác nhận mật khẩu'" />
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>
							<input type="hidden" asp-for="Email" class="form-control" />
							<input type="hidden" asp-for="Token" class="form-control" />
							<div class="col-md-12 form-group">
								<input style="background:#fd7e14" type="submit" value="Đổi mật khẩu" class="btn btn-primary" />
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->