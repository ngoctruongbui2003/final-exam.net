@model IEnumerable<Category>

@{
    ViewData["Title"] = "Danh sách hãng";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h4 class="card-title">Danh sách các hãng có trong Shop</h4>
			<a class="btn btn-gradient-success btn-fw" asp-action="Create" asp-controller="Category">Thêm mới</a>
        </div>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tên hãng</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
							<a class="btn btn-gradient-warning btn-fw" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Chỉnh sửa</a>
							<a class="btn btn-gradient-success btn-fw" asp-action="Detail" asp-controller="Category" asp-route-id="@item.Id">Chi tiết</a>
							<a class="btn btn-gradient-danger btn-fw" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Xóa</a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>