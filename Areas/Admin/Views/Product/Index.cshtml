    @model IEnumerable<Product>

    @{
        ViewData["Title"] = "Danh sách sản phẩm";
	    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }

    <div class="card">
        <div class="card-body">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h4 class="card-title">Danh sách các sản phẩm có trong Shop</h4>
			    <a class="btn btn-gradient-success btn-fw" asp-action="Create" asp-controller="Product">Thêm mới</a>
            </div>
        
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Sản phẩm</th>
                        <th>Size</th>
                        <th>Hãng</th>
                        <th>Giá sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <div class="media">
                                    <div class="d-flex">
                                        <img style="width:120px;height:auto;" src="~/Images/@item.Image" alt="@item.Name">
                                    </div>
                                    <div class="media-body">
                                        <p>@item.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>@item.Size.SizeNumber</td>
                            <td>@item.Category.Name</td>
                            <td>@item.Price.ToString("N0")đ</td>
                            <td>@item.Quantity</td>
                            <td>
                                <a class="btn btn-gradient-warning btn-fw" asp-action="Update" asp-controller="Product" asp-route-id="@item.Id"> Chỉnh sửa</a>
							    <a class="btn btn-gradient-success btn-fw" asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">Chi tiết</a>
							    <a class="btn btn-gradient-danger btn-fw" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Xóa</a>
                            </td>
                        </tr>
                    }
                
                </tbody>
            </table>
        </div>
    </div>